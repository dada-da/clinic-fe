<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.clinic.ui.controller.AppointmentListViewController"
            prefHeight="700.0" prefWidth="1200.0">

    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label fx:id="lblTitle" text="Danh Sách Lịch Hẹn Hôm Nay" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label fx:id="lblDate" text="Ngày: " style="-fx-font-size: 14px;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnRefresh" text="Làm mới"/>
                <Button fx:id="btnNewAppointment" text="Tạo lịch hẹn mới"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tableAppointments" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colTime" text="Giờ" prefWidth="80"/>
                <TableColumn fx:id="colPatient" text="Bệnh nhân" prefWidth="200"/>
                <TableColumn fx:id="colDoctor" text="Bác sĩ" prefWidth="200"/>
                <TableColumn fx:id="colReason" text="Lý do khám" prefWidth="300"/>
                <TableColumn fx:id="colStatus" text="Trạng thái" prefWidth="120"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Label fx:id="lblStatus" text="Sẵn sàng"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblCount" text="Tổng: 0 lịch hẹn"/>
        </HBox>
    </bottom>

</BorderPane>
