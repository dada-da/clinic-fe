<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.clinic.ui.controller.AppointmentViewController"
            prefHeight="700.0" prefWidth="900.0">

    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Appointment Workspace" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="btnAddAppointment" text="Add Appointment Tab"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TabPane fx:id="tabPaneAppointments" tabClosingPolicy="ALL_TABS" prefWidth="Infinity" prefHeight="Infinity"/>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #f0f0f0; -fx-padding: 5;">
            <Label fx:id="lblStatus" text="Ready to create new appointment"/>
            <ProgressBar fx:id="progressBar" prefWidth="250" visible="false" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        </HBox>
    </bottom>

</BorderPane>

