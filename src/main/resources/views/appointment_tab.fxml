<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.clinic.ui.controller.AppointmentTabController">
    <children>
        <ScrollPane fitToWidth="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    AnchorPane.topAnchor="0"
                    AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0"
                    AnchorPane.rightAnchor="0">
            <content>
                <VBox spacing="20" style="-fx-padding: 20;" maxWidth="Infinity">

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button fx:id="btnReset" text="Đặt lại biểu mẫu"/>
                    </HBox>

                    <!-- Step 1: Patient Lookup/Create -->
                    <TitledPane text="Bước 1: Thông tin bệnh nhân" expanded="true" collapsible="false">
                        <VBox spacing="10" style="-fx-padding: 10;">
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="Mã định danh:" prefWidth="100"/>
                                <TextField fx:id="txtSocialId" promptText="Nhập mã định danh" prefWidth="200"/>
                                <Button fx:id="btnCheckPatient" text="Tìm kiếm bệnh nhân"/>
                            </HBox>

                            <Separator/>

                            <GridPane hgap="10" vgap="10">
                                <Label text="Họ và tên:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                <TextField fx:id="txtFullName" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="300"/>

                                <Label text="Ngày sinh:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                <DatePicker fx:id="dpDob" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="300"/>

                                <Label text="Giới tính:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                <ComboBox fx:id="cmbGender" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="300"/>

                                <Label text="Điện thoại:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                                <TextField fx:id="txtPhone" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="300"/>

                                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                                <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="300"/>

                                <Label text="Địa chỉ:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                                <TextArea fx:id="txtAddress" GridPane.columnIndex="1" GridPane.rowIndex="5" prefWidth="300" prefHeight="60"/>
                            </GridPane>

                            <HBox spacing="10">
                                <Button fx:id="btnSavePatient" text="Lưu bệnh nhân" disable="true"/>
                                <Label fx:id="lblPatientStatus" style="-fx-text-fill: green;"/>
                            </HBox>
                        </VBox>
                    </TitledPane>

                    <!-- Step 2: Doctor Selection -->
                    <TitledPane text="Bước 2: Chọn bác sĩ" expanded="true" collapsible="false" fx:id="paneDoctor" disable="true">
                        <VBox spacing="10" style="-fx-padding: 10;">
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="Chọn bác sĩ:"/>
                                <ComboBox fx:id="cmbDoctor" prefWidth="400" promptText="Chọn bác sĩ..."/>
                            </HBox>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="Lý do:"/>
                                <TextField fx:id="txtReason" promptText="Lý do khám" prefWidth="400"/>
                            </HBox>
                            <HBox spacing="10">
                                <Button fx:id="btnCreateAppointment" text="Tạo lịch hẹn"/>
                            </HBox>
                        </VBox>
                    </TitledPane>

                    <!-- Step 3: Medical Record -->
                    <TitledPane text="Bước 3: Khám bệnh" expanded="true" collapsible="false" fx:id="paneMedical" disable="true">
                        <VBox spacing="10" style="-fx-padding: 10;">
                            <GridPane hgap="10" vgap="10">
                                <Label text="Triệu chứng:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                <TextArea fx:id="txtSymptoms" GridPane.columnIndex="1" GridPane.rowIndex="0" prefHeight="80" prefWidth="500"/>

                                <Label text="Chẩn đoán:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                <TextArea fx:id="txtDiagnosis" GridPane.columnIndex="1" GridPane.rowIndex="1" prefHeight="80" prefWidth="500"/>

                                <Label text="Điều trị:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                <Label text="(Chỉ định &amp; thuốc của bác sĩ)" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-size: 10px; -fx-text-fill: gray;"/>
                                <TextArea fx:id="txtTreatment" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.rowSpan="2" prefHeight="120" prefWidth="500"/>
                            </GridPane>

                            <HBox spacing="10">
                                <Button fx:id="btnSaveMedical" text="Lưu bệnh án &amp; hoàn tất"/>
                            </HBox>
                        </VBox>
                    </TitledPane>

                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>

